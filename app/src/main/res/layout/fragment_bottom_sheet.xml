<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:id="@+id/linear_upper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:text="ALL"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:background="@drawable/backweekdays_select"
                        android:id="@+id/btn_all_select" />

                    <Button
                        android:text="ALL"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:background="@drawable/backweekdays"
                        android:id="@+id/btn_all" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:text="Sun"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:background="@drawable/backweekdays_select"
                        android:id="@+id/btn_sun_select" />

                    <Button
                        android:text="Sun"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:background="@drawable/backweekdays"
                        android:id="@+id/btn_sun" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:text="Mon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:background="@drawable/backweekdays_select"
                        android:id="@+id/btn_mon_select" />

                    <Button
                        android:text="Mon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:background="@drawable/backweekdays"
                        android:id="@+id/btn_mon" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:text="Tue"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:background="@drawable/backweekdays_select"
                        android:id="@+id/btn_tue_select" />

                    <Button
                        android:text="Tue"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:background="@drawable/backweekdays"
                        android:id="@+id/btn_tue" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:text="Wed"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:background="@drawable/backweekdays_select"
                        android:id="@+id/btn_wed_select" />

                    <Button
                        android:text="Wed"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:background="@drawable/backweekdays"
                        android:id="@+id/btn_wed" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:text="Thrs"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:background="@drawable/backweekdays_select"
                        android:id="@+id/btn_thrs_select" />

                    <Button
                        android:text="Thrs"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:background="@drawable/backweekdays"
                        android:id="@+id/btn_thrs" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:text="Fri"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:background="@drawable/backweekdays_select"
                        android:id="@+id/btn_fri_select" />

                    <Button
                        android:text="Fri"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:background="@drawable/backweekdays"
                        android:id="@+id/btn_fri" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:text="Sat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:background="@drawable/backweekdays_select"
                        android:id="@+id/btn_sat_select" />

                    <Button
                        android:text="Sat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:background="@drawable/backweekdays"
                        android:id="@+id/btn_sat" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible">

                    <Button
                        android:text="Sat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:background="@drawable/backweekdays_select"
                        android:id="@+id/btn_1_select" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible">

                    <Button
                        android:text="Sat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:background="@drawable/backweekdays_select"
                        android:id="@+id/btn_2_select" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e2f2e6"
            android:layout_margin="15dp"
            android:id="@+id/btn_set" />
    </LinearLayout>
</LinearLayout>